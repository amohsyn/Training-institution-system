@model TrainingIS.Entities.GPicture

<input type="file"
       id="Upload_Photo"
       data-picture_name_id="Photo_Reference"
       data-picture_preview_id="Photo_Preview"
       class="Upload_GPicture" />
<input style="display:none" type="text" name="Photo_Reference" id="Photo_Reference" />
@if (Model == null)
{
    <img id="Photo_Preview"  width="150" />

}
else
{
    <img id="Photo_Preview" title="@Model.Description" alt="@Model.Description" src="@Url.Content("~/")@Model.Small_Thumbnail" width="150" />

}

