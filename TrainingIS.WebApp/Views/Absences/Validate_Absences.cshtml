@section Style{
    @Styles.Render("~/Content/Manager/Details")
}
@{
    ViewBag.Title = "Validation d'absences";
}

<div class="x_panel">
    <div class="x_title">
        <h2> Validation d'absences </h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <h3>Voulez vous valider tous les absences ?</h3>
        <hr />
    </div>
</div>

<div class="x_panel">
    <div class="x_content">
        <div class="row">
            <a href="@Url.Action("Index")" class="btn btn-app">
                <i class="fa fa-close"></i>  @msg_app.Back_to_List
            </a>
            <div style="float:left">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <a href="#" onclick="$(this).closest('form').submit();" class="btn btn-app">
                        <i class="fa fa-bell-slash"></i> Valider tous les absences
                    </a>
                }
            </div>

        </div>
    </div>
</div>

