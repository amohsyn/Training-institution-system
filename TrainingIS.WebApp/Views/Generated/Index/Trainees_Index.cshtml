@model TrainingIS.Entities.ModelsViews.Default_IndexTraineeView
@section Style{
    @Styles.Render("~/Content/Manager/Index")
}
@section scripts{
    @Scripts.Render("~/bundles/Manager/Index")
    <script>
        $("#dataTable").DataTable({
            language: dataTable_language_fr,
			 select: true
        });

		$("#bt_import").click(function(){
            var display = $("#import_form").css("display");
            if (display == "none") {
                $("#import_form").show();
            } else {
                $("#import_form").hide();
            }
        });
    </script>
}

@{
    ViewBag.Title = ViewBag.msg["Index_Title"];
}


<div class="x_panel">
    <div class="x_title">
        <h2>@ViewBag.msg["Index_Title"]</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
			
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
            <a href="@Url.Action("Create")" class="btn btn-app">
                <i class="fa fa-plus"></i>  @msg_app.Create_New
            </a>

        <a href="@Url.Action("Export")" class="btn btn-app">
            <i class="fa fa-file-excel-o"></i>  Export
        </a>

     
		<a href="#" class="btn btn-app" id="bt_import">
                <i class="fa fa-file-excel-o"></i>  Import
		</a>
            @using (Html.BeginForm("Import", "Trainees", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div id="import_form" class="container" style="display : none">
                    <hr />
                    <div class="row">
					 
                        <div class="col-md-3">
                            <input required class="btn btn-app" type="file" name="import_objects" value="choose file" />
                        </div> 

                        <div class="col-md-2">
                            <input class="btn btn-app " type="submit" value="Importer" />
                        </div>


                    </div>
                </div>
            }
    </div>
</div>

 <div class="x_panel">
    <div class="x_content">

<table id="dataTable" class="table table-striped table-bordered">
<thead> 
    <tr> 
		   <th> 
           Téléphone portable
       </th> 
	   <th> 
           Tel du tuteur
       </th> 
	   <th> 
           E-mail
       </th> 
	   <th> 
           Adresse
       </th> 
	   <th> 
           FaceBook
       </th> 
	   <th> 
           Site Web
       </th> 
	   <th> 
           CEF
       </th> 
	   <th> 
            Actif
       </th> 
	   <th> 
           Date inscription
       </th> 
	   <th> 
           NationalityId
       </th> 
	   <th> 
           Niveau d'étude
       </th> 
	   <th> 
           Groupe
       </th> 
	   <th> 
           Nom
       </th> 
	   <th> 
           Prénom
       </th> 
	   <th> 
           Nom en arabe
       </th> 
	   <th> 
           Prénom en arabe
       </th> 
	   <th> 
           Date de naissance
       </th> 
	   <th> 
           Lieu de naissance
       </th> 
	   <th> 
           Sexe
       </th> 
	   <th> 
           CIN
       </th> 
  
        <th></th>
    </tr>
</thead> 
 <tbody>
  
@foreach (var item in Model.Data) { 
     <tr> 
         <td>@Html.GAppDisplayFor(modelItem => item.Cellphone)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.TutorCellPhone)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.Email)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.Address)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.FaceBook)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.WebSite)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.CNE)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.isActif)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.DateRegistration)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.NationalityId)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.SchoollevelId)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.GroupId)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.FirstName)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.LastName)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.FirstNameArabe)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.LastNameArabe)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.Birthdate)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.BirthPlace)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.Sex)</td>
         <td>@Html.GAppDisplayFor(modelItem => item.CIN)</td>
  
         <td>
			<a href="@Url.Action("Details")/@item.Id" class="link_action" title="@msg_app.Details" data-toggle="tooltip" data-placement="top">
                 <i class="fa fa-info fa-2x"></i>
			</a>
			<a href="@Url.Action("Edit")/@item.Id" class="link_action" title="@msg_app.Edit" data-toggle="tooltip" data-placement="top">
                     <i class="fa fa-edit fa-2x"></i>
			</a>
			<a href="@Url.Action("Delete")/@item.Id" class="link_action" title="@msg_app.Delete" data-toggle="tooltip" data-placement="top">
                     <i class="fa fa-trash fa-2x"></i>
			</a>
         </td>
     </tr>
}
 </tbody>
</table>
	</div>
</div>

