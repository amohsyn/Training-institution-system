		<dt>
          @Html.DisplayNameFor(model => model.SupervisorComment)
        </dt>
        <dd>
		@Html.GAppDisplayFor(model => model.SupervisorComment)    
		</dd>
 
    </dl>
   </div>
</div>

<div class="x_panel">
    <div class="x_content">
        <a href="@Url.Action("Index")" class="btn btn-app">
            <i class="fa fa-close"></i>  @msg_app.Back_to_List
        </a>
		<a href="@Url.Action("Edit")/@Model.Id" class="btn btn-app">
