@model IEnumerable<TrainingIS.Entities.ModelsViews.Default_Form_AuthrorizationApp_Model>
@section Style{
    @Styles.Render("~/Content/Manager/Details")
}
@{
     ViewBag.Title = ViewBag.msg["Delete_Title"] + " : " +  Model;
}

<div class="x_panel">
    <div class="x_title">
		<h2> @ViewBag.msg["Delete_Title"] : @Model </h2 >
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
<div>
	<table class="details_model">
		<tr>
			<td>@Html.DisplayNameFor(model => model.RoleApp)</td>
			<td>@Model.RoleApp.ToString()</td>
		</tr>
		<tr>
			<td>@Html.DisplayNameFor(model => model.ControllerApp)</td>
			<td>@Model.ControllerApp.ToString()</td>
		</tr>
		<tr>
			<td>@Html.DisplayNameFor(model => model.isAllAction)</td>
			<td>@Html.GAppDisplayFor(model => model.isAllAction)</td>
		</tr>
		<tr>
			<td>@Html.DisplayNameFor(model => model.ActionControllerApps)</td>
			<td>@Html.GAppDisplayFor(model => model.ActionControllerApps)</td>
		</tr>
 
    </table>
    <dl class="details_model">

    </dl>
</div>
<h3>@msg_app.Are_you_sure_you_want_to_delete</h3>
 <hr />
	</div>
</div>

<div class="x_panel">
    <div class="x_content">
        <div class="row">
            <a href="@Url.Action("Index")" class="btn btn-app">
                <i class="fa fa-close"></i>  @msg_app.Back_to_List
            </a>
            <div style="float:left">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <a href="#" onclick="$(this).closest('form').submit();" class="btn btn-app">
                        <i class="fa fa-trash"></i>  @msg_app.Delete
                    </a> 
                }
            </div>
           
        </div>
    </div>
</div>

