@model TrainingIS.Models.Absences.Details_Absence_Model
@section Style{
    @Styles.Render("~/Content/Manager/Details")
}
@{
    ViewBag.Title =   @msg_app.Details;
}

<div class="x_panel">
    <div class="x_title">
        <h2> @Model.ToString()</h2>
        <div class="clearfix"></div>
    </div> 
    <div class="x_content">
	 
	<table class="details_model">
		<tr> 
			<td>@Html.DisplayNameFor(model => model.Trainee)</td>
			<td>@(Model.Trainee?.ToString())</td> 
		</tr>
		<tr> 
			<td>@Html.DisplayNameFor(model => model.SeanceTraining)</td>
			<td>@(Model.SeanceTraining?.ToString())</td> 
		</tr>
		<tr> 
			<td>@Html.DisplayNameFor(model => model.FormerComment)</td>
			<td>@Html.GAppDisplayFor(model => model.FormerComment)</td> 
		</tr>
		<tr> 
			<td>@Html.DisplayNameFor(model => model.TraineeComment)</td>
			<td>@Html.GAppDisplayFor(model => model.TraineeComment)</td> 
		</tr>
		<tr> 
			<td>@Html.DisplayNameFor(model => model.SupervisorComment)</td>
			<td>@Html.GAppDisplayFor(model => model.SupervisorComment)</td> 
		</tr>
		<tr> 
			<td>@Html.DisplayNameFor(model => model.AbsenceState)</td>
			<td>@Html.GAppDisplayFor(model => model.AbsenceState)</td> 
		</tr>
 
    </table>
   </div>
</div>

<div class="x_panel">
    <div class="x_content">
        <a href="@Url.Action("Index")" id="Back_to_List" class="btn btn-app">
            <i class="fa fa-close"></i>  @msg_app.Back_to_List
        </a>
		@if (ViewBag.HasPermission.ToAction("Edit"))
        {
		<a href="@Url.Action("Edit")/@Model.Id" id="Edit_Entity" class="btn btn-app">
            <i class="fa fa-edit"></i>  @msg_app.Edit
        </a>
        }
    </div>
</div>  


