@model TrainingIS.Entities.ModelsViews.GroupModelsViews.DetailsGroupView
@section Style{
    @Styles.Render("~/Content/Manager/Details")
}
@{
    ViewBag.Title =   @msg_app.Details;
}

<div class="x_panel">
    <div class="x_title">
        <h2> @Model.ToString()</h2>
        <div class="clearfix"></div>
    </div> 
    <div class="x_content">
	 
	<table class="details_model">
		<tr> 
			<td>@Html.DisplayNameFor(model => model.Code)</td>
			<td>@Html.GAppDisplayFor(model => model.Code)</td> 
		</tr>
		<tr> 
			<td>@Html.DisplayNameFor(model => model.YearStudy)</td>
			<td>@(Model.YearStudy?.ToString())</td> 
		</tr>
		<tr> 
			<td>@Html.DisplayNameFor(model => model.Specialty)</td>
			<td>@(Model.Specialty?.ToString())</td> 
		</tr>
		<tr> 
			<td>@Html.DisplayNameFor(model => model.TrainingType)</td>
			<td>@(Model.TrainingType?.ToString())</td> 
		</tr>
		<tr> 
			<td>@Html.DisplayNameFor(model => model.Desc)</td>
			<td>@Html.GAppDisplayFor(model => model.Desc)</td> 
		</tr>
 
    </table>
   </div>
</div>

<div class="x_panel">
    <div class="x_content">
        <a href="@Url.Action("Index")" class="btn btn-app">
            <i class="fa fa-close"></i>  @msg_app.Back_to_List
        </a>
		<a href="@Url.Action("Edit")/@Model.Id" class="btn btn-app">
            <i class="fa fa-edit"></i>  @msg_app.Edit
        </a>
    </div>
</div>  


